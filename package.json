{
  "name": "mindarc-root",
  "version": "1.0.0",
  "description": "Root package for MindArc monorepo",
  "main": "index.js",
  "scripts": {
    "backend": "dotenv -e .env -- npm --prefix backend run dev",
    "frontend": "npm --prefix frontend run dev",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "start": "dotenv -e .env -- npm --prefix backend run start",
    "install": "npm --prefix frontend && npm --prefix backend install",
    "build": "npm --prefix frontend run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@eslint/js": "^9.33.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "@stripe/stripe-js": "^8.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0"
  }
}
